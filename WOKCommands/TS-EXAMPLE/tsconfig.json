{
    "compilerOptions": {
        "target": "ES6",
		"module": "commonjs",
		"outDir": "dist",
		"rootDir": "src",
		"watch": true,
		"pretty": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
    },
    "exclude": ["node_modules"]
}